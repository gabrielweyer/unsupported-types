# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
end_of_line = CRLF
insert_final_newline = true

[*.ps1]
indent_style = space
indent_size = 2

[*.cs]
indent_style = space
indent_size = 4

[*.cake]
indent_style = space
indent_size = 4

[*.json]
indent_style = space
indent_size = 2

[*.sh]
end_of_line = LF
